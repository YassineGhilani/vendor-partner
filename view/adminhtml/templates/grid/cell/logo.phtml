<?php

/**
 * Grid cell template: displays a small thumbnail for the logo (if exists)
 *
 * Note: the grid column uses this bodyTmpl.
 */

/** @var $block \Magento\Framework\View\Element\Template */
$logo = $block->getData('logo');
if ($logo) :
    $mediaBase = $block->getUrl('', ['_type' => \Magento\Framework\UrlInterface::URL_TYPE_MEDIA]);
    $mediaUrl = rtrim($mediaBase, '/') . '/' . ltrim($logo, '/');
?>
    <img src="<?= $this->escapeUrl($mediaUrl) ?>" alt="<?= $this->escapeHtml($block->getData('name')) ?>" style="max-width:80px; max-height:40px;" />
<?php endif; ?>