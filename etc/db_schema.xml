<?xml version="1.0"?>
<!-- Declarative schema: table vendor_partners -->
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="vendor_partners" resource="default" engine="innodb" comment="Vendor Partners">
        <column xsi:type="int" name="partner_id" unsigned="true" nullable="false" identity="true" comment="Partner ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Partner name"/>
        <column xsi:type="varchar" name="logo" nullable="true" length="255" comment="Logo file path (relative to media/partners)"/>
        <column xsi:type="varchar" name="url" nullable="true" length="255" comment="Partner URL"/>
        <column xsi:type="date" name="start_date" nullable="true" comment="Partnership start date"/>
        <column xsi:type="smallint" name="is_active" nullable="false" default="1" unsigned="true" comment="Is active"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="partner_id"/>
        </constraint>
    </table>
</schema>
